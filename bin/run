#!/usr/bin/env node

const fs = require('fs');
const path = require('path');

const project = path.join(__dirname, '../tsconfig.json');
const isDev = fs.existsSync(project);

if (isDev) {
  require('ts-node').register({ project });
}

require(`../${isDev ? 'src' : 'lib'}/cli`)
  .default.run()
  .catch(require('@oclif/errors/handle'));
